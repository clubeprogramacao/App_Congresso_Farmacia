<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    >

    <view
        class="android.support.v4.widget.Space"
        id="@+id/view"
        layout_width="match_parent"
        android:layout_width="match_parent"
        android:layout_height="50dp" />

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        app:srcCompat="@drawable/logo1" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="XI CONGRESSO CIENTÍFICO NEF/AAC"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="24sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="228dp"
        tools:layout_editor_absoluteY="326dp" />

    <view
        class="android.support.v4.widget.Space"
        android:id="@+id/view1"
        layout_width="match_parent"
        android:layout_width="match_parent"
        android:layout_height="60dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="111dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/BotaoCalend"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="88dp"
            android:layout_height="88dp"

            android:layout_weight="1"
            android:onClick="GotoInfo"
            android:scaleType="fitCenter"
            android:src="@drawable/calendario"
            tools:layout_editor_absoluteX="373dp"
            tools:layout_editor_absoluteY="722dp" />

        <ImageButton
            android:id="@+id/BotaoInfo"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="88dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:onClick="GotoInfo"
            android:scaleType="fitCenter"
            android:src="@drawable/info"
            tools:layout_editor_absoluteX="373dp"
            tools:layout_editor_absoluteY="722dp" />

        <ImageButton
            android:id="@+id/BotaoMapa"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="88dp"
            android:layout_height="88dp"

            android:layout_row="4"
            android:layout_weight="1"
            android:onClick="GotoInfo"
            android:scaleType="fitCenter"
            android:src="@drawable/mapa"
            tools:layout_editor_absoluteX="373dp"
            tools:layout_editor_absoluteY="722dp" />

        <ImageButton
            android:id="@+id/BotaoPatr"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="88dp"
            android:layout_height="88dp"

            android:layout_weight="1"
            android:onClick="GotoInfo"
            android:scaleType="fitCenter"
            android:src="@drawable/patrocinios"
            tools:layout_editor_absoluteX="373dp"
            tools:layout_editor_absoluteY="722dp" />

    </LinearLayout>

</LinearLayout>
